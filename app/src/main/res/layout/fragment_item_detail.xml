<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ItemDetailFragment">

        <LinearLayout
            style="@style/WidthMatchParentHeightWrapContent"
            android:background="@color/colorGrey"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="wrap_content"
                android:background="@color/colorWhite"
                android:layout_height="230dp">
            </android.support.v4.view.ViewPager>

            <LinearLayout
                style="@style/AllwrapContentStyle"
                android:layout_margin="@dimen/margin_default_value"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemDetailCondition"
                    style="@style/AllwrapContentStyle"
                    android:layout_marginEnd="@dimen/margin_extrabig_value"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="@dimen/size_font_detail_item_condition" />

                <TextView
                    android:id="@+id/tvItemDetailSold"
                    style="@style/AllwrapContentStyle"
                    android:layout_marginEnd="@dimen/margin_extraextralight_value"
                    android:fontFamily="@font/proxima_nova_light"
                    android:textSize="@dimen/size_font_detail_item_condition" />

                <TextView
                    android:id="@+id/tvItemDetailSoldDeference"
                    style="@style/AllwrapContentStyle"
                    android:fontFamily="@font/proxima_nova_light"
                    android:text="@string/text_sold"
                    android:textSize="@dimen/size_font_detail_item_condition" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvItemDetailTitle"
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_marginLeft="@dimen/margin_default_value"
                android:layout_marginRight="@dimen/margin_default_value"
                android:fontFamily="@font/proxima_nova_reg"
                android:textSize="@dimen/size_font_detail_item_title" />

            <TextView
                android:id="@+id/tvItemDetailPrice"
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_margin="@dimen/margin_default_value"
                android:fontFamily="@font/proxima_nova_bold"
                android:textSize="@dimen/size_font_detail_item_price" />

            <View style="@style/Divider" />

            <TextView
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_margin="@dimen/margin_default_value"
                android:fontFamily="@font/proxima_nova_reg"
                android:text="@string/text_features"
                android:textSize="@dimen/size_font_detail_item_title_features"
                android:textStyle="bold" />


            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName1"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesTitles"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName2"
                        style="@style/ItemDetailLinearAttributesTitles" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue1"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesValues"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue2"
                        style="@style/ItemDetailLinearAttributesValues" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName3"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesTitles"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName4"
                        style="@style/ItemDetailLinearAttributesTitles"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue3"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesValues"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue4"
                        style="@style/ItemDetailLinearAttributesValues" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName5"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesTitles"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureName6"
                        style="@style/ItemDetailLinearAttributesTitles"
                         />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_marginBottom="@dimen/margin_default_value"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue5"
                        android:layout_marginStart="@dimen/margin_default_value"
                        style="@style/ItemDetailLinearAttributesValues"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemDetailFeatureValue6"
                        style="@style/ItemDetailLinearAttributesValues"
                        />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <TextView
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_margin="@dimen/margin_default_value"

                android:fontFamily="@font/proxima_nova_reg"
                android:text="@string/text_accept_mp"
                android:textSize="@dimen/size_font_detail_item_title_features"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemDetailAcceptMercadopago"
                style="@style/WidthMatchParentHeightWrapContent"
                android:layout_marginStart="@dimen/margin_default_value"
                android:layout_marginBottom="@dimen/margin_default_value"
                android:fontFamily="@font/proxima_nova_reg"
                android:textSize="@dimen/size_font_detail_item_mp_acepts"/>
        </LinearLayout>
</ScrollView>


